<div class="container">
  <div class="row">
    <h2>新規会員登録</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <table border="0" width="800" height="300">
      <tr>
        <th>名前</th>
        <td>
          <div class="form-group">
            (姓)
            <%= f.text_field :family_name, autofocus: true, autocomplete: "family_name" %>
            (名)
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
          </div>
        </td>
      </tr>
      <tr>
        <th>フリガナ</th>
        <td>
          <div class="form-group">
            (セイ)
            <%= f.text_field :family_name_kana, autofocus: true, autocomplete: "family_name_kana" %>
            (メイ)
            <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
          </div>
        </td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td>
          <div class="form-group">
            <%= f.text_field :email, autofocus: true, autocomplete: "email" %>
          </div>
        </td>
      </tr>
      <tr>
        <th>郵便番号(ハイフンなし)</th>
        <td>
          <div class="form-group">
            <%= f.text_field :post_code, autofocus: true, autocomplete: "post_code" %>
          </div>
        </td>
      </tr>
      <tr>
        <th>住所</th>
        <td>
          <div class="form-group">
            <%= f.text_field :address, autofocus: true, autocomplete: "adress" %>
          </div>
        </td>
      </tr>
      <tr>
        <th>電話番号(ハイフンなし)</th>
        <td>
          <div class="form-group">
            <%= f.text_field :tel, autofocus: true, autocomplete: "tel" %>
          </div>
        </td>
      </tr>
      <tr>
        <th>パスワード(6文字以上)</th>
        <td>
          <div class="field">
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>
        </td>
      </tr>
      <tr>
        <th >パスワード確認用</th>
        <td>
          <div class="field">
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
        </td>
      </tr>
    </table>

    <div style="text-align: center;">
      <div class="actions">
        <%= f.submit "新規登録", class:"btn btn-success" %>
      </div>
    </div>
    <% end %>

    <h4>すでに登録済みの方</h4>
    <h5>　　<%= link_to "こちら", new_customer_session_path  %>からログインしてください</h5>
  </div>
</div>
